<section id="about">
    <div class="container">
        <div class="about-grid">
            <div class="content">
                <h2 class="text-gradient">About me</h2>
                <!--                 <p>
                    Hi there, I'm Javi. I'm a frontend engineer with over 10
                    years of experience. I'm passionate about creating beautiful
                    and functional user interfaces.
                </p>
                <p></p> -->
                <ul class="stats">
                    <li>
                        <strong>+10</strong>
                        <span>Years of experience</span>
                    </li>
                    <li>
                        <strong>+20</strong>
                        <span
                            >Projects completed across different industries</span
                        >
                    </li>
                </ul>
            </div>
            <div class="image-placeholder">
                <div class="placeholder-art">
                    <img src="/assets/javi-profile.png" alt="Javi Hertz" />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .about-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }

    .stats {
        display: flex;
        gap: 3rem;
        list-style: none;
        margin-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 2rem;
    }

    .stats li strong {
        display: block;
        font-size: 2.5rem;
        color: var(--color-primary);
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .stats li span {
        font-size: 0.9rem;
        color: var(--color-text-muted);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .image-placeholder {
        aspect-ratio: 1;
        background: linear-gradient(45deg, #1a1a1a, #111);
        border-radius: 20px;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .placeholder-art {
        position: absolute;
        width: 120%;
        height: 120%;
        background: radial-gradient(
            circle,
            var(--color-secondary-dim) 0%,
            transparent 70%
        );
        opacity: 0.7;
        top: -10%;
        left: -10%;
    }

    @media (max-width: 768px) {
        .about-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }
</style>
