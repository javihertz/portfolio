---
import profile from "../assets/javi-profile.png";
---

<main>
  <section id="main">
    <div class="container">
      <div class="main-grid">
        <div class="content">
          <h2 class="text-gradient">It's me Javi</h2>
          <p>
            Senior Frontend Engineer. Focused on scalable frontend architecture.
          </p>
          <ul class="stats">
            <li>
              <strong>+10</strong>
              <span>Years of experience</span>
            </li>
            <li>
              <strong>+30</strong>
              <span
                >Projects completed across different industries (Automotive,
                Insurtech, IGaming)</span
              >
            </li>
          </ul>
        </div>
        <div class="image-placeholder">
          <img src={profile.src} alt="Javi Hertz" class="img-container" />
        </div>
      </div>
    </div>
  </section>

  <style>
    .container {
      padding: 3rem 1rem;
    }
    .main-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .stats {
      display: flex;
      gap: 3rem;
      list-style: none;
      margin-top: 2rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      padding-top: 2rem;
    }

    .stats li strong {
      display: block;
      font-size: 2.5rem;
      color: var(--color-primary);
      line-height: 1;
      margin-bottom: 0.5rem;
    }

    .stats li span {
      font-size: 0.9rem;
      color: var(--color-text-muted);
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .image-placeholder {
      aspect-ratio: 1;
      background: linear-gradient(45deg, #1a1a1a, #111);
      border-radius: 20px;
      position: relative;
      overflow: hidden;
      border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .img-container {
      width: 120%;
      height: 120%;
      object-fit: cover;
    }

    @media (max-width: 768px) {
      .main-grid {
        grid-template-columns: 1fr;
        gap: 3rem;
      }

      .stats {
        gap: 2rem;
        flex-direction: column;
        align-items: flex-start;
      }

      .image-placeholder {
        max-width: 400px;
        margin: 0 auto;
      }
    }
  </style>
</main>
